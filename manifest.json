{
  "manifest_version": 3,
  "name": "YouTube to Obsidian",
  "version": "1.0.0",
  "description": "Save YouTube videos as markdown notes to Obsidian vault",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Save to Obsidian"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}